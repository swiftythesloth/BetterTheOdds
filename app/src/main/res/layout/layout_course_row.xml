<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/course_name_text"
        android:textColor="@color/course_name_colour"/>

    <TextView
        android:id="@+id/course_num_runners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/course_num_runners_text"
        android:textColor="@color/course_num_runners_colour"/>

</LinearLayout>